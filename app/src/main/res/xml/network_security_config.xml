<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates
                src="system"
                />
            <certificates
                src="@raw/spooncert"
                overridePins="true"
                />
        </trust-anchors>
    </base-config>
    <domain-config>
        <domain includeSubdomains="true">api.spoonacular.com</domain>
        <domain includeSubdomains="true">spoonacular.com</domain>
    </domain-config>
</network-security-config>